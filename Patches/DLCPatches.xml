<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Using conditionals as a faster option to PatchOperationFindMod -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Royalty -->
				<!-- Nothing needed for Royalty -->
				
				<!-- Ideology -->
				<li Class="PatchOperationConditional" MayRequire="ludeon.rimworld.ideology">
					<xpath>Defs</xpath>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationRemove">
								<xpath>Defs/MemeDef[defName="Transhumanist"]/addDesignators/li[text()="Tile_Transhumanist"]</xpath>		
							</li>
							<li Class="PatchOperationRemove">
								<xpath>Defs/StyleCategoryDef[defName="Spikecore"]/addDesignators/li[text()="Plates_Spikecore"]</xpath>		
							</li>
							<li Class="PatchOperationRemove">
								<xpath>Defs/StyleCategoryDef[defName="Totemic"]/addDesignators/li[text()="Boards_Totemic"]</xpath>	
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>Defs/MemeDef[defName="Transhumanist"]/addDesignatorGroups</xpath>
								<value>
									<li>StuffedTechistMetalTile</li>
								</value>		
							</li>
							<li Class="PatchOperationAdd">
								<xpath>Defs/StyleCategoryDef[defName="Spikecore"]/addDesignatorGroups</xpath>
								<value>
									<li>StuffedSpikecoreMetalPlates</li>
								</value>		
							</li>
							<li Class="PatchOperationAdd">
								<xpath>Defs/StyleCategoryDef[defName="Totemic"]/addDesignatorGroups</xpath>
								<value>
									<li>StuffedTotemicWoodBoards</li>
								</value>		
							</li>
							
							<li Class="PatchOperationReplace">
								<xpath>Defs/StyleCategoryDef[defName="Morbid"]/addDesignatorGroups/li[text()="Floor_Morbid_Stone"]</xpath>
								<value>
									<li>StuffedMorbidStoneTile</li>
								</value>		
							</li>		
							<li Class="PatchOperationReplace">
								<xpath>Defs/StyleCategoryDef[defName="Spikecore"]/addDesignatorGroups/li[text()="Floor_Spikecore_Tile"]</xpath>
								<value>
									<li>StuffedSpikecoreStoneTile</li>
								</value>		
							</li>		
							<li Class="PatchOperationReplace">
								<xpath>Defs/StyleCategoryDef[defName="Totemic"]/addDesignatorGroups/li[text()="Floor_Totemic_Tile"]</xpath>
								<value>
									<li>StuffedTotemicStoneTiles</li>
								</value>		
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>Defs/MemeDef[defName="Transhumanist"]/addDesignatorGroups</xpath>
								<value>
									<li>StuffedTechistFabricCarpet</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>Defs/StyleCategoryDef[defName="Morbid"]/addDesignatorGroups</xpath>
								<value>
									<li>StuffedMorbidFabricCarpet</li>
								</value>		
							</li>
							
							
							<!-- Patches for VE Memes & Structures -->
							<li Class="PatchOperationConditional" MayRequire="vanillaexpanded.vmemese">
								<xpath>Defs</xpath>
								<match Class="PatchOperationSequence">
									<operations>
										<li Class="PatchOperationReplace">
											<xpath>Defs/StyleCategoryDef[defName="VME_Corporate"]/addDesignatorGroups/li[text()="VME_Floor_CorporateFineStoneTiles"]</xpath>
											<value>
												<li MayRequire="Ludeon.RimWorld.Royalty">StuffedStoneCorporateTileVE</li>
											</value>		
										</li>
										<li Class="PatchOperationAdd">
											<xpath>Defs/StyleCategoryDef[defName="VME_Shintaoism"]/addDesignatorGroups</xpath>
											<value>
												<li MayRequire="Ludeon.RimWorld.Royalty">StuffedStoneShintaoTileVE</li>
												<li>StuffedFabricBasicShintaoCarpetVE</li>
												<li MayRequire="Ludeon.RimWorld.Royalty">StuffedFabricFineShintaoCarpetVE</li>
											</value>		
										</li>
										<li Class="PatchOperationRemove">
											<xpath>Defs/StyleCategoryDef[defName="VME_Shintaoism"]/addDesignatorGroups/li[text()="VME_Floor_ShintaoCarpetFine" or text()="VME_Floor_ShintaoCarpet" or text()="VME_Floor_ShintaoFineStoneTiles"]</xpath>
										</li>
										
									</operations>
								</match>
							</li>
							<!-- Patches for Alpha Memes Mod -->
							<li Class="PatchOperationConditional" MayRequire="sarg.alphamemes">
								<xpath>Defs</xpath>
								<match Class="PatchOperationSequence">
									<operations>
										<li Class="PatchOperationReplace">
											<xpath>Defs/StyleCategoryDef[defName="AM_Jewish"]/addDesignatorGroups/li[text()="AM_Floor_JewishTiles"]</xpath>
											<value>
												<li>StuffedStoneJewishTileAMPretty</li>
											</value>		
										</li>
										<li Class="PatchOperationReplace">
											<xpath>Defs/StyleCategoryDef[defName="AM_Kemetic"]/addDesignatorGroups/li[text()="AM_Floor_KemeticTiles"]</xpath>
											<value>
												<li>StuffedStoneKemeticTileAMPretty</li>
											</value>		
										</li>
										<li Class="PatchOperationReplace">
											<xpath>Defs/StyleCategoryDef[defName="AM_Kemetic"]/addDesignatorGroups/li[text()="AM_Floor_KemeticFineTiles"]</xpath>
											<value>
												<li MayRequire="Ludeon.RimWorld.Royalty">StuffedStoneKemeticTileAM</li>
											</value>		
										</li>
										<li Class="PatchOperationReplace">
											<xpath>Defs/StyleCategoryDef[defName="AM_SteampunkRevival"]/addDesignatorGroups/li[text()="AM_Floor_SteampunkTiles"]</xpath>
											<value>
												<li>StuffedStoneSteampunkTileAM</li>
												<li>StuffedMetalSteampunkTileAM</li>
											</value>		
										</li>
										
									</operations>
								</match>
							</li>
						
						</operations>
					</match>
				</li>
				
				<!-- Biotech -->
				
			</operations>
		</match>
	</Operation>
</Patch>
